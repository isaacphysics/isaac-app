export APP_VERSION=$1
export API_VERSION=`docker inspect -f '{{.Config.Labels.apiVersion}}' isaac-app-$APP_VERSION`
export ENV=$2

shift 2

export API_NAME=api-$ENV-$API_VERSION
export APP_NAME=app-$ENV-$APP_VERSION

if [ "$ENV" == "dev" ]; then
  export ES=es-tracking
  export PG=pg-dev
elif [ "$ENV" == "staging" ]; then
  export ES=es-tracking
  export PG=pg-live
elif [ "$ENV" == "live" ]; then
  export ES=es-live
  export PG=pg-live
elif [ "$ENV" == "test" ]; then
  export ES=es-test
  export PG=pg-test
  export API_NAME=api-test
  export APP_NAME=app-test

  read -r -d '' TEST_DEPS << EOM
es-test:
    container_name: $ES
    image: elasticsearch:1.4
  pg-test:
    container_name: $PG
    image: isaac-pg
    volumes:
      - /local/data/test-db-schema.sql:/docker-entrypoint-initdb.d/test-db-schema.sql
EOM

else
  echo "Must set environment to dev, staging or live."
  exit 1
fi

cat << EOF | docker-compose -f - $@
version: '2'
services:
  $TEST_DEPS
  $APP_NAME:
    container_name: $APP_NAME
    image: isaac-app-$APP_VERSION
    networks:
      default:
        aliases:
          - app-$ENV
  $API_NAME:
    container_name: $API_NAME
    image: isaac-api-$API_VERSION
    external_links:
      - $ES:elasticsearch
      - $PG:postgres
    volumes:
      - /local/data/m2:/root/.m2
      - /local/data/conf/segue-config.$ENV.properties:/local/data/rutherford/conf/segue-config.properties
      - /local/data/conf/live_version.properties:/local/data/rutherford/conf/live_version.properties
      - /local/data/rutherford-content:/local/data/rutherford/git-contentstore/rutherford-content
      - /local/data/keys:/local/data/rutherford/keys
      - /local/data/school_list.csv:/local/data/rutherford/school_list.csv 

networks:
  default:
    external:
      name: isaac
EOF

exit 0
